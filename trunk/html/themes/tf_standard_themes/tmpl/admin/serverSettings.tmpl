<tmpl_include name="../inc.head.tmpl">
<tmpl_var name="head">
<tmpl_var name="menu">
<div align="center">
	<table width="100%" border=1 bordercolor="<tmpl_var name="table_admin_border">" cellpadding="2" cellspacing="0" bgcolor="<tmpl_var name="table_data_bg">">
		<tr>
			<td bgcolor="<tmpl_var name="table_header_bg">" background="themes/<tmpl_var name="theme">/images/bar.gif">
				<img src="themes/tf_standard_themes/images/properties.png" width=18 height=13 border=0>&nbsp;&nbsp;<font class="title">Server Settings</font>
			</td>
		</tr>
		<tr>
			<td align="center">
				<script src="js/adminSettings.js" type="text/javascript"></script>
				<div align="center">
					<table cellpadding="5" cellspacing="0" border="0" width="100%">
						<form name="theForm" action="index.php?iid=admin&op=updateServerSettings" method="post" onsubmit="return validateSettings()">
							<tr>
								<td align="left" width="350" valign="top"><strong>Path</strong><br>
									Define the PATH where the downloads will go <br> It must be chmod'd to 777:
								</td>
								<td valign="top">
									<input name="path" type="Text" maxlength="254" value="<tmpl_var name="path">" size="55">
									<tmpl_if name="is_path">
										<tmpl_if name="is_writable">
											<img src="themes/tf_standard_themes/images/green.gif" align="absmiddle" title="Valid">
										<tmpl_else>
											<img src="themes/tf_standard_themes/images/red.gif" align="absmiddle" title="Path is not Writable"><br><font color="#ff0000">Path is not Writable -- make sure you chmod +w this path</font>
										</tmpl_if>
									<tmpl_else>
										<img src="images/red.gif" align="absmiddle" title="Path is not Valid"><br><font color="#ff0000">Path is not Valid</font>
									</tmpl_if>
								</td>
							</tr>
							<tr><td colspan="2" align="center" bgcolor="<tmpl_var name="table_header_bg">"><strong>Bins</strong></td></tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Path : transmissioncli</strong><br>
									Specify the path to the Transmission binary (transmissioncli):
								</td>
								<td valign="top">
									<input name="btclient_transmission_bin" type="Text" maxlength="254" value="<tmpl_var name="btclient_transmission_bin">" size="55"><tmpl_var name="validate_transmission_bin">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Path : grep</strong><br>
								Specify the path to the grep binary (/bin/grep):
								</td>
								<td valign="top">
									<input name="bin_grep" type="Text" maxlength="254" value="<tmpl_var name="bin_grep">" size="55"><tmpl_var name="validate_grep">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Path : php</strong><br>
								Specify the path to the php binary (/usr/bin/php):
								</td>
								<td valign="top">
									<input name="bin_php" type="Text" maxlength="254" value="<tmpl_var name="bin_php">" size="55"><tmpl_var name="validate_php">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Path : python</strong><br>
								Specify the path to the python binary (/usr/bin/python):
								</td>
								<td valign="top">
									<input name="pythonCmd" type="Text" maxlength="254" value="<tmpl_var name="pythonCmd">" size="55"><tmpl_var name="validate_python">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Path : awk</strong><br>
								Specify the path to the awk binary (/usr/bin/awk):
								</td>
								<td valign="top">
									<input name="bin_awk" type="Text" maxlength="254" value="<tmpl_var name="bin_awk">" size="55"><tmpl_var name="validate_awk">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Path : du</strong><br>
								Specify the path to the du binary (/usr/bin/du):
								</td>
								<td valign="top">
									<input name="bin_du" type="Text" maxlength="254" value="<tmpl_var name="bin_du">" size="55"><tmpl_var name="validate_du">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Path : wget</strong><br>
								Specify the path to the wget binary (/usr/bin/wget):
								</td>
								<td valign="top">
									<input name="bin_wget" type="Text" maxlength="254" value="<tmpl_var name="bin_wget">" size="55"><tmpl_var name="validate_wget">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Path : unzip</strong><br>
								Specify the path to the unzip binary (/usr/bin/unzip):
								</td>
								<td valign="top">
									<input name="bin_unzip" type="Text" maxlength="254" value="<tmpl_var name="bin_unzip">" size="55"><tmpl_var name="validate_unzip">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Path : cksfv</strong><br>
								Specify the path to the cksfv binary (/usr/bin/cksfv):
								</td>
								<td valign="top">
									<input name="bin_cksfv" type="Text" maxlength="254" value="<tmpl_var name="bin_cksfv">" size="55"><tmpl_var name="validate_cksfv">
								</td>
							</tr>
							<tr><td colspan="2" align="center" bgcolor="<tmpl_var name="table_header_bg">"><strong>OS-specific</strong> <em>(<tmpl_var name="php_uname1"> <tmpl_var name="php_uname2">)</em></td></tr>
							<tmpl_if name="_OS" value="1">
								<tr>
									<td align="left" width="350" valign="top"><strong>loadavg Path</strong><br>
									Path to the loadavg file (/proc/loadavg):
									</td>
									<td valign="top">
										<input name="loadavg_path" type="Text" maxlength="254" value="<tmpl_var name="loadavg_path">" size="55"><tmpl_var name="validate_loadavg">
									</td>
								</tr>
								<tr>
									<td align="left" width="350" valign="top"><strong>Path : netstat</strong><br>
									Specify the path to the netstat binary (/bin/netstat):
									</td>
									<td valign="top">
										<input name="bin_netstat" type="Text" maxlength="254" value="<tmpl_var name="bin_netstat">" size="55"><tmpl_var name="validate_netstat">
									</td>
								</tr>
								<tr>
									<td align="left" width="350" valign="top"><strong>Path : unrar</strong><br>
									Specify the path to the unrar binary (/usr/bin/unrar):
									</td>
									<td valign="top">
										<input name="bin_unrar" type="Text" maxlength="254" value="<tmpl_var name="bin_unrar">" size="55"><tmpl_var name="validate_unrar">
									</td>
								</tr>
							<tmpl_elseif name="_OS" value="2">
								<tr>
									<td align="left" width="350" valign="top"><strong>Path : sockstat</strong><br>
									Specify the path to the sockstat binary (/usr/bin/sockstat):
									</td>
									<td valign="top">
										<input name="bin_sockstat" type="Text" maxlength="254" value="<tmpl_var name="bin_sockstat">" size="55"><tmpl_var name="validate_sockstat">
									</td>
								</tr>
								<tr>
									<td align="left" width="350" valign="top"><strong>Path : rarbsd</strong><br>
									Specify the path to the rarbsd binary:
									</td>
									<td valign="top">
										<input name="bin_unrar" type="Text" maxlength="254" value="<tmpl_var name="bin_unrar">" size="55"><tmpl_var name="validate_unrar">
									</td>
								</tr>
							</tmpl_if>
						</table>
						<br>
						<input type="Submit" value="Update Settings">
					</form>
				</div>
				<br>
			</td>
		</tr>
	</table>
</div>
<tmpl_var name="foot">