<tmpl_include name="inc.head.tmpl">
<tmpl_include name="inc.subhead.tmpl">
<tmpl_include name="inc.adminmenu.tmpl">
<script src="js/functions.js" type="text/javascript"></script>
<script src="js/adminSettings.js" type="text/javascript"></script>
<div align="center">
	<table width="100%" border=1 bordercolor="<tmpl_var name="table_admin_border">" cellpadding="2" cellspacing="0" bgcolor="<tmpl_var name="table_data_bg">">
		<tr>
			<td bgcolor="<tmpl_var name="table_header_bg">" background="themes/<tmpl_var name="theme">/images/bar.gif">
				<img src="themes/tf_standard_themes/images/properties.png" width=18 height=13 border=0>&nbsp;&nbsp;<font class="title">Control Settings</font>
			</td>
		</tr>
		<tr>
			<td align="center">
				<div align="center">
					<form name="theForm" action="admin.php?op=updateControlSettings" method="post" onsubmit="return validateSettings('control')">
						<table cellpadding="5" cellspacing="0" border="0" width="100%">
							<tr>
								<td align="left" width="350" valign="top"><strong>Customize Settings</strong><br>
								 Define who can customize Settings :
								</td>
								<td valign="top">
									<select name="transfer_customize_settings">
										<option value="2">All Users</option>
										<option value="1"
										<tmpl_if name="transfer_customize_settings" value="1">
											 selected
										</tmpl_if>
										>Only Admins</option>
										<option value="0"
										<tmpl_if name="transfer_customize_settings" value="0">
											 selected
										</tmpl_if>
										>Disabled</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Transfer profiles</strong><br>
								 Define who can use Profiles :
								</td>
								<td valign="top">
									<select name="transfer_profiles">
										<option value="3">All Users</option>
										<option value="2"
										<tmpl_if name="transfer_profiles" value="2">
											 selected
										</tmpl_if>
										>Only Predefined</option>
										<option value="1"
										<tmpl_if name="transfer_profiles" value="1">
											 selected
										</tmpl_if>
										>Only Admins</option>
										<option value="0"
										<tmpl_if name="transfer_profiles" value="0">
											 selected
										</tmpl_if>
										>Disabled</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Enable Client-Chooser</strong><br>
									When enabled, users will be given the option to choose the Transfer-Client:
								</td>
								<td valign="top">
									<select name="enable_btclient_chooser">
										<option value="1">true</option>
										<option value="0"
										<tmpl_if name="enable_btclient_chooser" value="0">
											 selected
										</tmpl_if>
										>false</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Enable Specific save path</strong><br>
								Show Directory Tree allowing you to select the path for the file(s).
								</td>
								<td valign="top">
									<select name="showdirtree">
										<option value="1">true</option>
										<option value="0"
										<tmpl_if name="showdirtree" value="0">
											 selected
										</tmpl_if>
										>false</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Max Depth in Directory Tree</strong><br>
								Set the max depth of subfolders when displaying directory tree.
								Set it to 0 if you want to display all subfolders.
								</td>
								<td valign="top">
									<input name="maxdepth" type="Text" maxlength="1" value="<tmpl_var name="maxdepth">" size="1">
								</td>
							</tr>

						</table>
						<br>
						<input type="Submit" value="Update Settings">
					</form>
				</div>
				<br>
			</td>
		</tr>
	</table>
</div>
<tmpl_include name="inc.subfoot.tmpl">