<tmpl_if name="drivespacebar" value="tf">
	<table width="100%" border="0" cellpadding="0" cellspacing="0">
		<tr nowrap>
			<td width="2%"><div class="tiny"><tmpl_var name="_STORAGE">:</div></td>
			<td width="80%">
				<table width="100%" border="0" cellpadding="0" cellspacing="0">
					<tr>
						<td background="themes/<tmpl_var name="theme">/images/proglass.gif" width="<tmpl_var name="drivespace">%"><div class="tinypercent" align="center"><tmpl_var name="drivespace">%<tmpl_var name="freeSpace"></div></td>
						<td background="themes/<tmpl_var name="theme">/images/noglass.gif" width="<tmpl_var name="drivespace2">%"><img src="images/blank.gif" width="1" height="3" border="0"></td>
					</tr>
				</table>
			</td>
		</tr>
	</table>
<tmpl_elseif name="drivespacebar" value="xfer">
	<table width="100%" border="0" cellpadding="0" cellspacing="0">
		<tr nowrap>
			<td width="2%"><div class="tiny"><tmpl_var name="_STORAGE">:</div></td>
			<td width="92%">
				<table width="100%" border="0" cellpadding="0" cellspacing="0"><tr>
					<td bgcolor="<tmpl_var name="bgcolor">" width="<tmpl_var name="drivespace">%">
						<tmpl_if name="drivespace" op=">" value="50">
							<div class="tinypercent" align="center"
							<tmpl_if name="drivespace" value="100">
								 style="background:#00FF00;"
							</tmpl_if>>
							<tmpl_var name="drivespace">%<tmpl_var name="freeSpace">
							</div>
						</tmpl_if>
					</td>
				<td bgcolor="#000000" width="<tmpl_var name="drivespace2">%">
					<tmpl_if name="drivespace" op="<" value="50">
						<div class="tinypercent" align="center" style="color:<tmpl_var name="bgcolor">
							<tmpl_if name="drivespace" value="0">
								; background:#FF0000
							</tmpl_if>;">
							<tmpl_var name="drivespace">%<tmpl_var name="freeSpace">
						</div>
					</tmpl_if>
				</td>
				</tr></table>
			</td>
		</tr>
	</table>
</tmpl_if>