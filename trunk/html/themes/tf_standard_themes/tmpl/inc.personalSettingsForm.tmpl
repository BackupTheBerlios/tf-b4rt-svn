					<option value="tf"
					<tmpl_if name="drivespacebar" value="tf">
						 selected
					</tmpl_if>
					>tf</option>
					<option value="xfer"
					<tmpl_if name="drivespacebar" value="xfer">
						 selected
					</tmpl_if>
					>xfer</option>
				</select>
			</td>
		</tr>
