<tmpl_include name="inc.head.tmpl">
<tmpl_include name="inc.transferHead.tmpl">
<tmpl_include name="inc.transferNavi.tmpl">
<script src="js/transferSettings.js" type="text/javascript"></script>
<table bgcolor="<tmpl_var name="body_data_bg">" width="100%" cellpadding="1">
	<tr>
		<td>
			<div align="center">
			<tmpl_if name="isSave" value="1">
				<tmpl_var name="message"><br>
				<tmpl_if name="list_changes">
					<br><strong>Changes :</strong>
					<table border="1" bordercolor="<tmpl_var name="table_admin_border">" cellpadding="2" cellspacing="0" bgcolor="<tmpl_var name="table_data_bg">" width="100%">
						<tmpl_loop name="list_changes">
							<tr>
								<td align="left" width="75%"><tmpl_var name="lbl">:</td>
								<td nowrap><tmpl_var name="val"></td>
							</tr>
						</tmpl_loop>
					</table>
				</tmpl_if>
				<tmpl_if name="list_send">
					<br><strong>Changes sent to Client :</strong>
					<table border="1" bordercolor="<tmpl_var name="table_admin_border">" cellpadding="2" cellspacing="0" bgcolor="<tmpl_var name="table_data_bg">" width="100%">
						<tmpl_loop name="list_send">
							<tr>
								<td align="left" width="75%"><tmpl_var name="lbl">:</td>
								<td nowrap><tmpl_var name="val"></td>
							</tr>
						</tmpl_loop>
					</table>
				</tmpl_if>
				<tmpl_if name="list_restart">
					<br><strong>Changes that require a Client-Restart :</strong>
					<table border="1" bordercolor="<tmpl_var name="table_admin_border">" cellpadding="2" cellspacing="0" bgcolor="<tmpl_var name="table_data_bg">" width="100%">
						<tmpl_loop name="list_restart">
							<tr>
								<td align="left" width="75%"><tmpl_var name="lbl">:</td>
								<td nowrap><tmpl_var name="val"></td>
							</tr>
						</tmpl_loop>
					</table>
				</tmpl_if>
			<tmpl_else>
				<form name="theForm" action="index.php?iid=transferSettings&save" method="post" onsubmit="return validateSettings('<tmpl_var name="type">')">
					<input type="hidden" name="transfer" value="<tmpl_var name="transfer">" />
					<input type="hidden" name="type" value="<tmpl_var name="type">" />
					<table border="1" bordercolor="<tmpl_var name="table_admin_border">" cellpadding="2" cellspacing="0" bgcolor="<tmpl_var name="table_data_bg">" width="100%">
						<tmpl_if name="type" value="torrent">
							<tr>
								<td align="left" width="75%">Max Upload Rate:</td>
								<td nowrap>
									<input name="max_upload_rate" type="Text" maxlength="5" value="<tmpl_var name="max_upload_rate">" size="5"> kB/second
								</td>
							</tr>
						<tmpl_else>
							<input type="hidden" name="max_upload_rate" value="<tmpl_var name="max_upload_rate">" />
						</tmpl_if>
						<tr>
							<td align="left" width="75%">Max Download Rate:</td>
							<td nowrap>
								<input name="max_download_rate" type="Text" maxlength="5" value="<tmpl_var name="max_download_rate">" size="5"> kB/second
							</td>
						</tr>
						<tmpl_if name="type" value="wget">
							<input type="hidden" name="maxcons" value="<tmpl_var name="maxcons">" />
						<tmpl_else>
							<tr>
								<td align="left" width="75%">Max Cons:</td>
								<td nowrap>
									<input name="maxcons" type="Text" maxlength="4" value="<tmpl_var name="maxcons">" size="4">
								</td>
							</tr>
						</tmpl_if>
						<tmpl_if name="type" value="torrent">
							<tr>
								<td align="left" width="75%">Torrent Completion Activity:</td>
								<td nowrap>
									<select name="torrent_dies_when_done">
										<option value="True">Die When Done</option>
										<option value="False"
											<tmpl_if name="torrent_dies_when_done" value="False">
												 selected
											</tmpl_if>
										>Keep Seeding</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="75%">Percentage When Seeding should Stop:</td>
								<td nowrap>
									<input name="sharekill" type="Text" maxlength="3" value="<tmpl_var name="sharekill">" size="3">%
								</td>
							</tr>
							<tr>
								<td align="left" width="75%">Superseeder:</td>
								<td nowrap>
									<select name="superseeder">
										<option value="1">true</option>
										<option value="0"
										<tmpl_if name="superseeder" value="0">
											 selected
										</tmpl_if>
										>false</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="75%">Max Upload Connections:</td>
								<td nowrap>
									<input name="max_uploads" type="Text" maxlength="5" value="<tmpl_var name="max_uploads">" size="5">
								</td>
							</tr>
							<tr>
								<td align="left" width="75%">Port Range:</td>
								<td nowrap>
									<input name="minport" type="Text" maxlength="5" value="<tmpl_var name="minport">" size="5"> -
									<input name="maxport" type="Text" maxlength="5" value="<tmpl_var name="maxport">" size="5">
								</td>
							</tr>
						<tmpl_else>
							<input type="hidden" name="torrent_dies_when_done" value="<tmpl_var name="torrent_dies_when_done">" />
							<input type="hidden" name="sharekill" value="<tmpl_var name="sharekill">" />
							<input type="hidden" name="superseeder" value="<tmpl_var name="superseeder">" />
							<input type="hidden" name="max_uploads" value="<tmpl_var name="max_uploads">" />
							<input type="hidden" name="minport" value="<tmpl_var name="minport">" />
							<input type="hidden" name="maxport" value="<tmpl_var name="maxport">" />
						</tmpl_if>
						<tr>
							<td colspan="2" align="right">
								<tmpl_if name="sendboxShow" value="1">
									<input type="checkbox" name="sendbox" id="sendbox" <tmpl_var name="sendboxAttr">>Send Changes to Client&nbsp;
								</tmpl_if>
								<input type="Submit" value="Save">
							</td>
						</tr>
					</table>
				</form>
			</tmpl_if>
			</div>
		</td>
	</tr>
</table>
<tmpl_include name="inc.transferFoot.tmpl">