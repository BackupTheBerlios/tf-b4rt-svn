<tmpl_include name="inc.head.tmpl">
<tmpl_include name="inc.subhead.tmpl">
<tmpl_include name="inc.adminmenu.tmpl">
<script src="js/adminSettings.js" type="text/javascript"></script>
<div align="center">
	<table width="100%" border=1 bordercolor="<tmpl_var name="table_admin_border">" cellpadding="2" cellspacing="0" bgcolor="<tmpl_var name="table_data_bg">">
		<tr>
			<td bgcolor="<tmpl_var name="table_header_bg">" background="themes/<tmpl_var name="theme">/images/bar.gif">
				<img src="themes/tf_standard_themes/images/properties.png" width=18 height=13 border=0>&nbsp;&nbsp;<font class="title">WebApp Settings</font>
			</td>
		</tr>
		<tr>
			<td align="center">
				<div align="center">
					<table cellpadding="5" cellspacing="0" border="0" width="100%">
						<form name="theForm" action="admin.php?op=updateWebappSettings" method="post" onsubmit="return validateSettings('webapp')">
							<tr>
								<td align="left" width="350" valign="top"><strong>Select Auth-Type</strong><br>
									<em>Form-Auth</em> : Standard Form-Based Auth<br>
									<em>Form-Auth + Cookie</em> : Form-Based Auth with "Auto-Login"-Cookie<br>
									<em>Form-Auth + Image-Validation</em> : Form-Based Auth with additional Image-Validation<br>
									<em>Basic-Auth</em> : Basic-Auth<br>
									<em>Basic-Passthru</em> : gets credentials of already authenticated user and passes them to webapp<br>
								</td>
								<td valign="top">
									<tmpl_if name="auth_type_list">
										<select name="auth_type">
											<tmpl_loop name="auth_type_list">
												<option value="<tmpl_var name="avalue">"<tmpl_if name="aselected" value="1"> selected</tmpl_if>><tmpl_var name="atype"></option>
											</tmpl_loop>
										</select>
									</tmpl_if>
									<br /><br /><br />
									<img src="image.php?i=test" border="0" title="Test-Image">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Basic-Auth Realm</strong><br>
								Specify the Basic-Auth Realm : <br> Used only if Auth-Type is "Basic-Auth".
								</td>
								<td valign="bottom">
									<input name="auth_basic_realm" type="Text" maxlength="64" value="<tmpl_var name="auth_basic_realm">" size="30">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Page-Title</strong><br>
								Specify the Page-Title :
								</td>
								<td valign="bottom">
									<input name="pagetitle" type="Text" maxlength="64" value="<tmpl_var name="pagetitle">" size="30">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Display Bottom-Link</strong><br>
								Display Link at bottom of pages :
								</td>
								<td valign="bottom">
									<select name="ui_displayfluxlink">
										<option value="1">true</option>
										<option value="0"
										<tmpl_if name="ui_displayfluxlink" value="0">
											 selected
										</tmpl_if>
										>false</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Drivespace-Bar Style</strong><br>
								Select Style of Drivespace-Bar :
								</td>
								<td valign="top">
									<select name="drivespacebar">
										<option value="tf"
										<tmpl_if name="drivespacebar" value="tf">
											 selected
										</tmpl_if>
										>tf</option>
										<option value="xfer"
										<tmpl_if name="drivespacebar" value="xfer">
											 selected
										</tmpl_if>
										>xfer</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Transfer-Stats Type</strong><br>
								Choose Type of Transfer-Stats-Window :
								</td>
								<td valign="bottom">
									<select name="transferStatsType">
										<option value="standard">standard</option>
										<option value="ajax"
										<tmpl_if name="transferStatsType" value="ajax">
											 selected
										</tmpl_if>
										>ajax</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Transfer-Stats Update Intervall</strong><br>
								Update-intervall in seconds of the Transfer-Stats-Window :
								</td>
								<td valign="bottom">
									<input name="transferStatsUpdate" type="Text" maxlength="3" value="<tmpl_var name="transferStatsUpdate">" size="3">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Transfer-Hosts</strong><br>
								Show IPs or Hostnames in Transfer-Hosts-Window :
								</td>
								<td valign="top">
									<select name="transferHosts">
										<option value="1">Hostnames</option>
										<option value="0"
										<tmpl_if name="transferHosts" value="0">
											 selected
										</tmpl_if>
										>IPs</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Server Monitor Update Intervall</strong><br>
								Number of seconds for Server Monitor Update :
								</td>
								<td valign="top">
									<input name="servermon_update" type="Text" maxlength="3" value="<tmpl_var name="servermon_update">" size="3">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Enable dereferrer</strong><br>
									When enabled, links will be proxied over the dereferrer-page.
								</td>
								<td valign="top">
									<select name="enable_dereferrer">
											<option value="1">true</option>
											<option value="0"
										<tmpl_if name="enable_dereferrer" value="0">
											 selected
										</tmpl_if>
										>false</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Default Theme</strong><br>
								Select the default theme that users will have (including login screen):
								</td>
								<td valign="top">
									<select name="default_theme">
										<tmpl_loop name="theme_list">
											<option value="<tmpl_var name="arThemes">" <tmpl_var name="selected">><tmpl_var name="arThemes"></option>
										</tmpl_loop>
										<optgroup label="Standard TF Themes" style="background-color: #00EC00">
											<tmpl_loop name="tfstandard_theme_list">
												<option value="<tmpl_var name="arThemes2">" <tmpl_var name="selected"> style="background-color: #FFFFFF"><tmpl_var name="arThemes"></option>
											</tmpl_loop>
										</optgroup>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Default Language</strong><br>
								Select the default language that users will have:
								</td>
								<td valign="top">
									<select name="default_language">
										<tmpl_loop name="lang_list">
											<option value="<tmpl_var name="arLanguage">" <tmpl_var name="selected">><tmpl_var name="GetLanguageFromFile"></option>
										</tmpl_loop>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Days to keep Audit Actions in the Log</strong><br>
								Number of days that audit actions will be held in the database:
								</td>
								<td valign="top">
									<input name="days_to_keep" type="Text" maxlength="3" value="<tmpl_var name="days_to_keep">" size="3">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Minutes to Keep User Online Status</strong><br>
								Number of minutes before a user status changes to offline after leaving TorrentFlux:
								</td>
								<td valign="top">
									<input name="minutes_to_keep" type="Text" maxlength="2" value="<tmpl_var name="minutes_to_keep">" size="2">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Minutes to Cache RSS Feeds</strong><br>
								Number of minutes to cache the RSS XML feed on server (speeds up reload):
								</td>
								<td valign="top">
									<input name="rss_cache_min" type="Text" maxlength="3" value="<tmpl_var name="rss_cache_min">" size="3">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Enable Template Cache</strong><br>
								Enable the Caching of the Templating-System. <br> <tmpl_var name="SuperAdminLink_tmplCache">
								</td>
								<td valign="top">
									<select name="enable_tmpl_cache">
										<option value="1">true</option>
										<option value="0"<tmpl_if name="enable_tmpl_cache" value="0"> selected</tmpl_if>>false</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Debug-Level</strong><br>
								Set the Debug-Level of the Webapp.
								</td>
								<td valign="top">
									<select name="debuglevel">
										<option value="0"<tmpl_if name="debuglevel" value="0"> selected</tmpl_if>>0</option>
										<option value="1"<tmpl_if name="debuglevel" value="1"> selected</tmpl_if>>1</option>
										<option value="2"<tmpl_if name="debuglevel" value="2"> selected</tmpl_if>>2</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Show SQL Debug Statements</strong><br>
								SQL Errors will always be displayed but when this feature is enabled the SQL Statement
								that caused the error will be displayed as well:
								</td>
								<td valign="top">
									<select name="debug_sql">
										<option value="1">true</option>
										<option value="0"
										<tmpl_if name="debug_sql" value="0">
											 selected
										</tmpl_if>
										>false</option>
									</select>
								</td>
							</tr>
						</table>
						<br>
						<input type="Submit" value="Update Settings">
					</form>
				</div>
				<br>
			</td>
		</tr>
	</table>
</div>
<tmpl_include name="inc.subfoot.tmpl">