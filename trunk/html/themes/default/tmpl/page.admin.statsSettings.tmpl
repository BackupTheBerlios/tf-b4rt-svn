<tmpl_include name="inc.head.tmpl">
<tmpl_include name="inc.subhead.tmpl">
<tmpl_var name="menu">
<div align="center">
	<table width="100%" border=1 bordercolor="<tmpl_var name="table_admin_border">" cellpadding="2" cellspacing="0" bgcolor="<tmpl_var name="table_data_bg">">
		<tr>
			<td bgcolor="<tmpl_var name="table_header_bg">" background="themes/default/images/bar.gif">
				<img src="themes/default/images/properties.png" width=18 height=13 border=0>&nbsp;&nbsp;<font class="title">Stats Settings</font>
			</td>
		</tr>
		<tr>
			<td align="center">
				<script src="js/adminSettings.js" type="text/javascript"></script>
				<div align="center">
					<table cellpadding="5" cellspacing="0" border="0" width="100%">
						<form name="theForm" action="index.php?iid=admin&op=updateStatsSettings" method="post" onsubmit="return validateSettings()">
							<tr>
								<td align="left" width="350" valign="top"><strong>Enable Public Stats</strong><br>
								If Public Stats are enabled stats show complete (superadmin-level) stats without authentication.
								</td>
								<td valign="top">
									<select name="stats_enable_public">
										<option value="1">true</option>
										<option value="0"
										<tmpl_if name="stats_enable_public" value="0">
											 selected
										</tmpl_if>
										>false</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Show Usage</strong><br>
								Show Usage when stats is called without arguments.
								</td>
								<td valign="top">
									<select name="stats_show_usage">
										<option value="1">true</option>
										<option value="0"
										<tmpl_if name="stats_show_usage" value="0">
											 selected
										</tmpl_if>
										>false</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Deflate Level</strong><br>
								Specify level of deflate compression. (default is "9"):
								</td>
								<td valign="bottom">
									<select name="stats_deflate_level">
										<tmpl_loop name="deflate_list">
											<option value="<tmpl_var name="i">"
												<tmpl_if name="is_selected" value="1">
													 selected
												</tmpl_if>
											><tmpl_var name="i"></option>
										</tmpl_loop>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Text Delim Char</strong><br>
								Specify delim-char for text-format. (default is ';'):
								</td>
								<td valign="bottom">
									<input name="stats_txt_delim" type="Text" maxlength="1" value="<tmpl_var name="stats_txt_delim">" size="1">
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Default : Header</strong><br>
								Specify default for send-header. <br><em>Note</em>: Only used in txt-format.
								</td>
								<td valign="top">
									<select name="stats_default_header">
										<option value="1">true</option>
										<option value="0"
										<tmpl_if name="stats_default_header" value="0">
											 selected
										</tmpl_if>
										>false</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Default : type</strong><br>
								Specify default-type :
								</td>
								<td valign="bottom">
									<select name="stats_default_type">
										<option value="all"
										<tmpl_if name="stats_default_type" value="all">
											 selected
										</tmpl_if>
										>all</option>
										<option value="server"
										<tmpl_if name="stats_default_type" value="server">
											 selected
										</tmpl_if>
										>server</option>
										<option value="transfers"
										<tmpl_if name="stats_default_type" value="transfers">
											 selected
										</tmpl_if>
										>transfers</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Default : format</strong><br>
								Specify default-format :
								</td>
								<td valign="bottom">
									<select name="stats_default_format">
										<option value="xml"
										<tmpl_if name="stats_default_format" value="xml">
											 selected
										</tmpl_if>
										>xml</option>
										<option value="rss"
										<tmpl_if name="stats_default_format" value="rss">
											 selected
										</tmpl_if>
										>rss</option>
										<option value="txt"
										<tmpl_if name="stats_default_format" value="txt">
											 selected
										</tmpl_if>
										>txt</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Default : Compress</strong><br>
								Specify default for send-compressed :
								</td>
								<td valign="top">
									<select name="stats_default_compress">
										<option value="1">true</option>
										<option value="0"
										<tmpl_if name="stats_default_compress" value="0">
											 selected
										</tmpl_if>
										>false</option>
									</select>
								</td>
							</tr>
							<tr>
								<td align="left" width="350" valign="top"><strong>Default : Attachment</strong><br>
								Specify default for send-as-attachment :
								</td>
								<td valign="top">
									<select name="stats_default_attach">
										<option value="1">true</option>
										<option value="0"
										<tmpl_if name="stats_default_attach" value="0">
											 selected
										</tmpl_if>
										>false</option>
									</select>
								</td>
							</tr>
						</table>
						<br>
						<input type="Submit" value="Update Settings">
					</form>
				</div>
				<br>
			</td>
		</tr>
	</table>
</div>
<tmpl_include name="inc.subfoot.tmpl">