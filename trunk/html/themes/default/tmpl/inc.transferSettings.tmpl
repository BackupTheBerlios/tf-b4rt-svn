	<tr>
		<td align="left" width="75%">Percentage When Seeding should Stop:</td>
		<td nowrap>
			<input name="sharekill" type="Text" maxlength="3" value="<tmpl_var name="sharekill">" size="3">%
		</td>
	</tr>
<tmpl_else>
	<input type="hidden" name="sharekill" value="<tmpl_var name="sharekill">" />
