<input type="hidden" name="client" value="<tmpl_var name="client">">
<input type="hidden" name="type" value="<tmpl_var name="type">" />
<tmpl_if name="max_upload_rate_enabled" value="1">
	<tr>
		<td align="left" width="75%">Max Upload Rate:</td>
		<td nowrap>
			<input name="max_upload_rate" type="Text" maxlength="5" value="<tmpl_var name="max_upload_rate">" size="5"> kB/second
		</td>
	</tr>
<tmpl_else>
	<input type="hidden" name="max_upload_rate" value="<tmpl_var name="max_upload_rate">" />
</tmpl_if>
