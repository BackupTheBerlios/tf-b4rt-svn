		<td align="left" width="75%">Superseeder:</td>
		<td nowrap>
			<select name="superseeder">
				<option value="1">true</option>
				<option value="0"
				<tmpl_if name="superseeder" value="0">
					 selected
				</tmpl_if>
				>false</option>
			</select>
		</td>
	</tr>
<tmpl_else>
	<input type="hidden" name="superseeder" value="<tmpl_var name="superseeder">" />
