<table width="100%">
	<tr>
		<td width="10%">
			<div class="tiny">Upload :</div>
		</td>
		<td width="90%">
			<table width="100%" border="0" cellpadding="0" cellspacing="0" style="margin-top:1px;margin-bottom:1px;">
				<tr>
					<td bgcolor="<tmpl_var name="bandwidthbars_upload_bgcolor">" width="<tmpl_var name="bandwidthbars_upload_percent">%">
						<tmpl_if name="bandwidthbars_upload_percent" op=">" value="50">
							<div class="tinypercent" align="center"
								<tmpl_if name="bandwidthbars_upload_percent" value="100">
									 style="background:#FF0000;">
								<tmpl_else>
									>
								</tmpl_if>
								<tmpl_var name="bandwidthbars_upload_percent">% (<tmpl_var name="bandwidthbars_upload_text">)
							</div>
						</tmpl_if>
					</td>
					<td bgcolor="#000000" width="<tmpl_var name="bandwidthbars_upload_percent2">%" height="100%">
						<tmpl_if name="bandwidthbars_upload_percent" op="<" value="50">
							<div class="tinypercent" align="center" style="color:<tmpl_var name="bandwidthbars_upload_bgcolor">
								<tmpl_if name="bandwidthbars_upload_percent" value="0">
									; background:#000000;">
								<tmpl_else>
									;">
								</tmpl_if>
								<tmpl_var name="bandwidthbars_upload_percent">% (<tmpl_var name="bandwidthbars_upload_text">)
							</div>
						</tmpl_if>
					</td>
				</tr>
			</table>
		</td>
	</tr>
	<tr>
		<td width="10%">
			<div class="tiny">Download :</div>
		</td>
		<td width="90%">
			<table width="100%" border="0" cellpadding="0" cellspacing="0" style="margin-top:1px;margin-bottom:1px;">
				<tr>
					<td bgcolor="<tmpl_var name="bandwidthbars_download_bgcolor">" width="<tmpl_var name="bandwidthbars_download_percent">%">
						<tmpl_if name="bandwidthbars_download_percent" op=">" value="50">
							<div class="tinypercent" align="center"
								<tmpl_if name="bandwidthbars_download_percent" value="100">
									 style="background:#FF0000;">
								<tmpl_else>
									>
								</tmpl_if>
								<tmpl_var name="bandwidthbars_download_percent">% (<tmpl_var name="bandwidthbars_download_text">)
							</div>
						</tmpl_if>
					</td>
					<td bgcolor="#000000" width="<tmpl_var name="bandwidthbars_download_percent2">%" height="100%">
						<tmpl_if name="bandwidthbars_download_percent" op="<" value="50">
							<div class="tinypercent" align="center" style="color:<tmpl_var name="bandwidthbars_download_bgcolor">
								<tmpl_if name="bandwidthbars_download_percent" value="0">
									; background:#000000;">
								<tmpl_else>
									;">
								</tmpl_if>
								<tmpl_var name="bandwidthbars_download_percent">% (<tmpl_var name="bandwidthbars_download_text">)
							</div>
						</tmpl_if>
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>