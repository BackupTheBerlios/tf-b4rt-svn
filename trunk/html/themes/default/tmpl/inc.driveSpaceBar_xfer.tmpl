<table width="100%" border="0" cellpadding="0" cellspacing="0">
	<tr nowrap>
		<td width="2%"><div class="tiny"><tmpl_var name="_STORAGE">:</div></td>
		<td width="92%">
			<table width="100%" border="0" cellpadding="0" cellspacing="0">
				<tr>
					<td id="barDriveSpace2" bgcolor="<tmpl_var name="drivespacebar_bgcolor">" width="<tmpl_var name="drivespacebar_space2">%">
						<tmpl_if name="drivespacebar_space2" op=">" value="50">
							<div class="tinypercent" align="center"
							<tmpl_if name="drivespacebar_space2" value="100">
								 style="background:#00FF00;"
							</tmpl_if>>
							<label id="barDriveSpacePercent"><tmpl_var name="drivespacebar_space2"></label>% (<label id="barFreeSpace"><tmpl_var name="drivespacebar_freeSpace"></label>) Free
							</div>
						</tmpl_if>
					</td>
					<td id="barDriveSpace1" bgcolor="#000000" width="<tmpl_var name="drivespacebar_space">%">
						<tmpl_if name="drivespacebar_space2" op="<" value="50">
							<div class="tinypercent" align="center" style="color:<tmpl_var name="drivespacebar_bgcolor">
								<tmpl_if name="drivespacebar_space2" value="0">
									; background:#FF0000
								</tmpl_if>;">
								<label id="barDriveSpacePercent"><tmpl_var name="drivespacebar_space2"></label>% (<label id="barFreeSpace"><tmpl_var name="drivespacebar_freeSpace"></label>) Free
							</div>
						</tmpl_if>
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>